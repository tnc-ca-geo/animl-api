{
  "extends": "@tsconfig/node18/tsconfig.json", // https://github.com/tsconfig/bases?tab=readme-ov-file#node-18-tsconfigjson
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./.build",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src/**/*"
  ]
}