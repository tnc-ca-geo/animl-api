{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "module": "es2022",
        "target": "es2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "test/**/*",
        "src/**/*"
    ]
}
